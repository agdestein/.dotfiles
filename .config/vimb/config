# Home
set home-page=http://github.com

# Downloads
set download-path=~/Downloads

# UI
set stylesheet=off
set smooth-scrolling=on
set incsearch=true
set monospace-font=JuliaMono
# set monospace-font-size=13
set dark-mode=on

# # SSL
# set strict-ssl=false

# # JS
# set javascript-can-access-clipboard=off
# set javascript-can-open-windows-automatically=off

# Editing
set editor-command=smallacritty -e nvim %s

# Zoom in everything by default
# aug zoom_all
#   au LoadCommited * normal zz|8zI
# aug end

nnoremap <C-e> :e! simplyread();<CR>
nnoremap <C-t> :set stylesheet!<CR>
nnoremap <F11> :set fullscreen!<CR>

# If enabled the inputbox will be hidden whenever it contains no text.
set input-autohide=true

# Enable or disable the spell checking feature.
set spell-checking=true

# Set comma separated list of spell checking languages to be used for
# spell checking.
set spell-checking-languages=en,fr,ru,no

# Enable or disable support for WebGL on pages.
set webgl=true

# While typing a search command, show where the pattern typed so far matches.
set incsearch=true

# The font family to use as the default for content that does not specify a
# font.
# set default-font=DejaVu Sans
set default-font=Latin Modern Roman

# The font family used as the default for content using monospace font.
set monospace-font=JuliaMono

# The font family used as the default for content using sans-serif font.
# set sans-serif-font=DejaVu Sans
set sans-serif-font=Latin Modern Sans
# set sans-serif-font=Cantarell

# The font family used as the default for content using serif font.
# set serif-font=DejaVu Serif
set serif-font=Latin Modern Roman

# The default font size used to display text.
set font-size=16

# Default font size for the monospace font.
set monospace-font-size=13

# Default Full-Content zoom level in percent. Default is 100.
set default-zoom=100

# set hint-keys=asdfg;lkjh

# Map page zoom in normal mode to keys commonly used across applications
# + (zoom in), - (zoom out), = (zoom reset)
nmap + zI
nmap - zO
nmap = zz

# Shortcuts allow the opening of an URI built up from a named template with
# additional parameters.
shortcut-add duck=https://duckduckgo.com/?q=$0
shortcut-add dl=https://duckduckgo.com/lite/?q=$0
shortcut-add w=https://en.wikipedia.org/w/index.php?search=$0
shortcut-add aw=https://wiki.archlinux.org/index.php/search=$0
shortcut-add d=http://dict.cc/?s=$0
shortcut-add g=https://encrypted.google.com/search?q=$0
shortcut-add y=http://www.youtube.com/results?search_query=$0
shortcut-add gh=https://github.com/$0/$1
shortcut-add map=https://maps.google.com/maps?saddr=$0&daddr=$1 # :open map "city hall, London" railway station, London
shortcut-add zim=https://zwebmail.cwi.nl/zimbra/#1
shortcut-add lem=https://www.lemonde.fr/
shortcut-add vimb=https://fanglingsu.github.io/vimb/man.html

# Set the shortcut as the default, that is the shortcut to be used if no
# shortcut is given and the string to open is not an URI.
shortcut-default duck

# GUI color settings (Dracula)
# Color scheme: Base16 Eighties (https://github.com/chriskempson/base16)
set completion-css=color:#f8f8f2; background-color:#282a36; font:12pt JuliaMono;
set completion-hover-css=color:#f8f8f2; background-color:#282a36; font:12pt JuliaMono;
set completion-selected-css=color:#f8f8f2; background-color:#575b70; font:12pt JuliaMono;
set input-css=color:#f8f8f2; background-color:#282a36; font:12pt JuliaMono;
set input-error-css=color:#ff5555; background-color:#282a36; font:12pt JuliaMono;
set status-css=color:#f1fa8c; background-color:#282a36; font:12pt JuliaMono;
set status-ssl-css=color:#caa9fa; background-color:#282a36; font:12pt JuliaMono;
set status-ssl-invalid-css=color:#ff79c6; background-color:#282a36; font:12pt JuliaMono;

